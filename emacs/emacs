;;----------------------------------------------------------------------
;; tabbar mode
;; http://emacswiki.org/emacs/TabBarMode
(require 'tabbar)
(tabbar-mode 1)
(load "tabbar.cfg")

(setq tabbar-buffer-groups-function
      (lambda ()

      (let ((dir (expand-file-name default-directory)))
        (cond ((member (buffer-name) '("*Completions*"
                       "*scratch*"
                       "*Messages*"
                       "*Ediff Registry*"))
           (list "#misc"))
          (
           (string-match-p "/.emacs.d/" dir)
           '".emacs.d"
           )
          (t (list dir))
          )
        )
      )
    )



